<h1><%= @bike.name %></h1>
<h5>$<%= @bike.price %></h5>
<h5>Brand: <%= @bike.brand.brand_name %></h5>
<h5>Condition: <%= @bike.condition %></h5>
<h5>Type: <%= @bike.bike_type %></h5>
<h5>Size: <%= @bike.size %></h5>
<h5>Material: <%= @bike.materials %></h5>
<h5>Discription: <%= @bike.discription %></h5>

<div class="btn-toolbar">
<%= link_to 'Edit', edit_bike_path(@bike), class: 'btn btn-outline-warning me-2'%>
<%= button_to 'Delete', @bike, class: 'btn btn-outline-danger', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@bike.name}' ?" }} %>
</div> 
